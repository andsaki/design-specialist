        gap: 1.5rem;
      }

      .glass-card {
        padding: 2.5rem 1.5rem;
        border-radius: 25px;
      }

      .card-icon {
        width: 70px;
        height: 70px;
        font-size: 2rem;
      }

      .card-title {
        font-size: 1.5rem;
      }

      .card-description {
        font-size: 0.95rem;
      }

      .feature-section {
        padding: 2.5rem 1.5rem;
        border-radius: 30px;
      }

      .feature-title {
        font-size: clamp(1.75rem, 6vw, 2.5rem);
        margin-bottom: 2rem;
      }

      .features-list {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .feature-emoji {
        font-size: 1.75rem;
      }

      .cta-section {
        padding: 2rem 1rem;
      }

      .cta-title {
        font-size: clamp(1.75rem, 7vw, 3rem);
      }

      .cta-button {
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        width: 100%;
        max-width: 300px;
      }

      .cloud-1 {
        width: 150px;
        height: 150px;
        top: 5%;
        left: 5%;
      }

      .cloud-2 {
        width: 180px;
        height: 180px;
        top: 50%;
        right: 5%;
      }

      .cloud-3 {
        width: 120px;
        height: 120px;
        bottom: 10%;
        left: 10%;
      }

      .bubble {
        display: none;
      }
    }

    @media (max-width: 480px) {
      .container {
        padding: 1.5rem 0.75rem;
      }

      h1 {
        font-size: 2.5rem;
        margin-bottom: 0.75rem;
      }

      .subtitle {
        font-size: 0.9rem;
      }

      .glass-card {
        padding: 2rem 1.25rem;
        border-radius: 20px;
      }

      .card-icon {
        width: 60px;
        height: 60px;
        font-size: 1.75rem;
      }

      .card-title {
        font-size: 1.35rem;
      }

      .feature-section {
        padding: 2rem 1.25rem;
        border-radius: 25px;
      }

      .feature-item {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .cta-button {
        padding: 0.9rem 2rem;
        font-size: 1rem;
      }
    }
  </style>
</head>
