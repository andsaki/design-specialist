---
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Soft Pastel - Dreamy & Ethereal</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;700&family=Comfortaa:wght@300;400;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<!-- Floating Bubbles Background -->
		<div class="bubbles">
			<div class="bubble"></div>
			<div class="bubble"></div>
			<div class="bubble"></div>
			<div class="bubble"></div>
			<div class="bubble"></div>
			<div class="bubble"></div>
		</div>

		<!-- Gradient Background -->
		<div class="gradient-bg"></div>

		<!-- Header -->
		<header>
			<nav class="glass">
				<a href={base} class="back-link">‚Üê Gallery</a>
			</nav>
		</header>

		<!-- Hero Section -->
		<section class="hero">
			<div class="container">
				<div class="hero-content">
					<div class="badge glass">‚úß Dreamy Design ‚úß</div>
					<h1>
						Soft & Sweet
						<span class="gradient-text">Dreams</span>
					</h1>
					<p class="hero-subtitle">
						Where colors blend like watercolors and everything feels light as a cloud
					</p>
					<div class="cta-buttons">
						<button class="btn btn-primary glass">Explore More</button>
						<button class="btn btn-secondary glass">Learn More</button>
					</div>
				</div>
				<div class="hero-visual">
					<div class="floating-card glass">
						<div class="card-glow pink"></div>
					</div>
					<div class="floating-card glass delayed">
						<div class="card-glow blue"></div>
					</div>
					<div class="floating-card glass delayed-more">
						<div class="card-glow purple"></div>
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section class="features">
			<div class="container">
				<h2>Features that feel like <span class="gradient-text">magic</span></h2>

				<div class="features-grid">
					<div class="feature-card glass">
						<div class="feature-emoji">‚ú®</div>
						<h3>Glassmorphism</h3>
						<p>
							Transparent layers with beautiful blur effects that create depth and dimension
						</p>
						<div class="card-shine"></div>
					</div>

					<div class="feature-card glass">
						<div class="feature-emoji">üå∏</div>
						<h3>Soft Gradients</h3>
						<p>
							Gentle color transitions that flow like cotton candy in the sky
						</p>
						<div class="card-shine"></div>
					</div>

					<div class="feature-card glass">
						<div class="feature-emoji">üí´</div>
						<h3>Dreamy Animations</h3>
						<p>
							Smooth, floating movements that make everything feel weightless
						</p>
						<div class="card-shine"></div>
					</div>

					<div class="feature-card glass">
						<div class="feature-emoji">ü¶Ñ</div>
						<h3>Pastel Palette</h3>
						<p>
							Carefully selected hues that evoke warmth, comfort, and joy
						</p>
						<div class="card-shine"></div>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="cta">
			<div class="container">
				<div class="cta-card glass">
					<div class="cta-glow"></div>
					<h2>Ready to float away?</h2>
					<p>Join us in this dreamy journey where everything is soft and sweet</p>
					<button class="btn btn-large glass">Get Started</button>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer>
			<div class="footer-content glass">
				<p>Made with love and pastel colors ‚Ä¢ 2025</p>
			</div>
		</footer>

		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
				--pink: #ffc8dd;
				--blue: #bde0fe;
				--purple: #cdb4db;
				--peach: #ffd6a5;
				--mint: #caffbf;
			}

			body {
				font-family: 'Quicksand', sans-serif;
				background: #fef6fb;
				color: #5a4a6a;
				line-height: 1.6;
				overflow-x: hidden;
			}

			.container {
				max-width: 1400px;
				margin: 0 auto;
				padding: 0 2rem;
			}

			/* Glass Effect */
			.glass {
				background: rgba(255, 255, 255, 0.3);
				backdrop-filter: blur(20px);
				-webkit-backdrop-filter: blur(20px);
				border: 1px solid rgba(255, 255, 255, 0.5);
				box-shadow: 0 8px 32px rgba(0, 0, 0, 0.05);
			}

			/* Gradient Background */
			.gradient-bg {
				position: fixed;
				inset: 0;
				background:
					radial-gradient(circle at 20% 30%, var(--pink) 0%, transparent 50%),
					radial-gradient(circle at 80% 70%, var(--blue) 0%, transparent 50%),
					radial-gradient(circle at 50% 50%, var(--purple) 0%, transparent 50%);
				opacity: 0.3;
				z-index: -2;
			}

			/* Floating Bubbles */
			.bubbles {
				position: fixed;
				inset: 0;
				pointer-events: none;
				z-index: -1;
			}

			.bubble {
				position: absolute;
				border-radius: 50%;
				background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.8), rgba(255, 200, 221, 0.2));
				animation: float 20s infinite ease-in-out;
			}

			.bubble:nth-child(1) { width: 80px; height: 80px; left: 10%; top: 20%; animation-delay: 0s; }
			.bubble:nth-child(2) { width: 120px; height: 120px; right: 15%; top: 40%; animation-delay: -5s; }
			.bubble:nth-child(3) { width: 60px; height: 60px; left: 60%; top: 60%; animation-delay: -10s; }
			.bubble:nth-child(4) { width: 100px; height: 100px; right: 30%; bottom: 20%; animation-delay: -15s; }
			.bubble:nth-child(5) { width: 70px; height: 70px; left: 30%; bottom: 30%; animation-delay: -8s; }
			.bubble:nth-child(6) { width: 90px; height: 90px; right: 50%; top: 10%; animation-delay: -12s; }

			@keyframes float {
				0%, 100% {
					transform: translateY(0) translateX(0) scale(1);
					opacity: 0.6;
				}
				50% {
					transform: translateY(-30px) translateX(20px) scale(1.1);
					opacity: 0.8;
				}
			}

			/* Header */
			header {
				padding: 2rem 0;
			}

			nav {
				max-width: 1400px;
				margin: 0 auto;
				padding: 1rem 2rem;
				border-radius: 100px;
				display: inline-block;
				margin-left: 2rem;
			}

			.back-link {
				color: #7b68a6;
				text-decoration: none;
				font-weight: 500;
				transition: all 0.3s;
			}

			.back-link:hover {
				color: #5a4a6a;
			}

			/* Hero Section */
			.hero {
				padding: 4rem 0 8rem;
			}

			.hero .container {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: center;
			}

			.badge {
				display: inline-block;
				padding: 0.8rem 2rem;
				border-radius: 100px;
				font-size: 0.9rem;
				margin-bottom: 2rem;
				color: #7b68a6;
			}

			h1 {
				font-family: 'Comfortaa', sans-serif;
				font-size: clamp(3rem, 8vw, 5rem);
				font-weight: 700;
				margin-bottom: 1.5rem;
				line-height: 1.2;
				color: #5a4a6a;
			}

			.gradient-text {
				display: block;
				background: linear-gradient(135deg, var(--pink), var(--purple), var(--blue));
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			.hero-subtitle {
				font-size: 1.3rem;
				color: #8a7aa0;
				margin-bottom: 2.5rem;
				line-height: 1.8;
			}

			.cta-buttons {
				display: flex;
				gap: 1rem;
			}

			.btn {
				padding: 1rem 2.5rem;
				border-radius: 100px;
				border: none;
				font-family: 'Quicksand', sans-serif;
				font-size: 1rem;
				font-weight: 600;
				cursor: pointer;
				transition: all 0.3s;
			}

			.btn-primary {
				color: #5a4a6a;
			}

			.btn-primary:hover {
				transform: translateY(-3px);
				box-shadow: 0 12px 40px rgba(255, 200, 221, 0.4);
			}

			.btn-secondary {
				color: #7b68a6;
			}

			.btn-secondary:hover {
				transform: translateY(-3px);
				box-shadow: 0 12px 40px rgba(189, 224, 254, 0.4);
			}

			/* Hero Visual */
			.hero-visual {
				position: relative;
				height: 500px;
			}

			.floating-card {
				position: absolute;
				width: 200px;
				height: 200px;
				border-radius: 30px;
				animation: floatCard 6s infinite ease-in-out;
			}

			.floating-card:nth-child(1) {
				top: 0;
				left: 0;
			}

			.floating-card:nth-child(2) {
				top: 50px;
				right: 50px;
				animation-delay: -2s;
			}

			.floating-card:nth-child(3) {
				bottom: 0;
				left: 50%;
				transform: translateX(-50%);
				animation-delay: -4s;
			}

			@keyframes floatCard {
				0%, 100% {
					transform: translateY(0) rotate(0deg);
				}
				50% {
					transform: translateY(-20px) rotate(5deg);
				}
			}

			.card-glow {
				width: 100%;
				height: 100%;
				border-radius: 30px;
				opacity: 0.6;
			}

			.card-glow.pink {
				background: linear-gradient(135deg, var(--pink), var(--peach));
			}

			.card-glow.blue {
				background: linear-gradient(135deg, var(--blue), var(--mint));
			}

			.card-glow.purple {
				background: linear-gradient(135deg, var(--purple), var(--pink));
			}

			/* Features Section */
			.features {
				padding: 6rem 0;
			}

			.features h2 {
				font-family: 'Comfortaa', sans-serif;
				font-size: clamp(2rem, 5vw, 3.5rem);
				text-align: center;
				margin-bottom: 4rem;
				color: #5a4a6a;
			}

			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 2rem;
			}

			.feature-card {
				padding: 3rem 2rem;
				border-radius: 30px;
				text-align: center;
				transition: all 0.4s;
				position: relative;
				overflow: hidden;
			}

			.feature-card:hover {
				transform: translateY(-10px) scale(1.02);
				box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
			}

			.card-shine {
				position: absolute;
				top: -50%;
				left: -50%;
				width: 200%;
				height: 200%;
				background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
				transform: rotate(45deg);
				transition: all 0.6s;
				opacity: 0;
			}

			.feature-card:hover .card-shine {
				opacity: 1;
				left: 100%;
			}

			.feature-emoji {
				font-size: 4rem;
				margin-bottom: 1.5rem;
			}

			.feature-card h3 {
				font-family: 'Comfortaa', sans-serif;
				font-size: 1.5rem;
				margin-bottom: 1rem;
				color: #5a4a6a;
			}

			.feature-card p {
				color: #8a7aa0;
				line-height: 1.8;
			}

			/* CTA Section */
			.cta {
				padding: 6rem 0;
			}

			.cta-card {
				padding: 5rem 3rem;
				border-radius: 40px;
				text-align: center;
				position: relative;
				overflow: hidden;
			}

			.cta-glow {
				position: absolute;
				inset: -50%;
				background: radial-gradient(circle, var(--pink), var(--blue), var(--purple));
				opacity: 0.1;
				animation: rotate 20s linear infinite;
			}

			@keyframes rotate {
				from { transform: rotate(0deg); }
				to { transform: rotate(360deg); }
			}

			.cta-card h2 {
				font-family: 'Comfortaa', sans-serif;
				font-size: clamp(2rem, 5vw, 3.5rem);
				margin-bottom: 1.5rem;
				color: #5a4a6a;
				position: relative;
				z-index: 1;
			}

			.cta-card p {
				font-size: 1.3rem;
				color: #8a7aa0;
				margin-bottom: 2.5rem;
				position: relative;
				z-index: 1;
			}

			.btn-large {
				padding: 1.5rem 4rem;
				font-size: 1.2rem;
				position: relative;
				z-index: 1;
				color: #5a4a6a;
			}

			.btn-large:hover {
				transform: translateY(-5px) scale(1.05);
				box-shadow: 0 20px 60px rgba(205, 180, 219, 0.4);
			}

			/* Footer */
			footer {
				padding: 3rem 0;
			}

			.footer-content {
				max-width: 600px;
				margin: 0 auto;
				padding: 1.5rem;
				border-radius: 100px;
				text-align: center;
				color: #8a7aa0;
			}

			/* Responsive */
			@media (max-width: 968px) {
				.hero .container {
					grid-template-columns: 1fr;
				}

				.hero-visual {
					height: 400px;
				}

				.floating-card {
					width: 150px;
					height: 150px;
				}
			}

			@media (max-width: 768px) {
				h1 {
					font-size: clamp(2.5rem, 8vw, 4rem);
				}

				.hero-subtitle {
					font-size: 1.1rem;
				}

				.cta-buttons {
					flex-direction: column;
				}

				.btn {
					width: 100%;
				}

				.features-grid {
					grid-template-columns: 1fr;
				}

				.cta-card {
					padding: 3rem 2rem;
				}
			}
		</style>
	</body>
</html>
