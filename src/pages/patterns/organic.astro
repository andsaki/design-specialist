			.shape-2 {
				width: 300px;
				height: 300px;
				background: linear-gradient(135deg, #6a994e, #f2cc8f);
				bottom: 20%;
				left: 5%;
				animation-delay: -7s;
			}

			.shape-3 {
				width: 250px;
