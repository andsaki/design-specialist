<style>
  body {
    background: linear-gradient(135deg,
      var(--dream-pink) 0%,
      var(--dream-lavender) 30%,
      var(--dream-mint) 60%,
      var(--dream-cream) 100%);
    min-height: 100vh;
  }

  /* Floating Background */
  .dream-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .cloud {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.3;
    animation: float 20s ease-in-out infinite;
  }

  .cloud-1 {
    width: 350px;
    height: 350px;
    background: var(--dream-lavender);
    top: 15%;
    left: 10%;
  }

  .cloud-2 {
    width: 400px;
    height: 400px;
    background: var(--dream-mint);
    top: 50%;
    right: 10%;
    animation-delay: 7s;
  }

  .cloud-3 {
    width: 300px;
    height: 300px;
    background: var(--dream-peach);
    bottom: 15%;
    left: 25%;
    animation-delay: 14s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(20px, -20px) scale(1.1);
    }
    50% {
      transform: translate(-15px, -40px) scale(0.9);
    }
    75% {
      transform: translate(10px, -20px) scale(1.05);
    }
  }

  /* Page Hero */
  .page-hero {
    position: relative;
    z-index: 1;
    padding: 10rem 0 4rem;
    text-align: center;
  }

  .page-hero h1 {
    font-family: var(--font-display);
    font-size: var(--fs-5xl);
    font-weight: 700;
    background: linear-gradient(135deg,
      var(--dream-deep-purple),
      var(--dream-accent-1),
      var(--dream-accent-2));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-family: var(--font-body);
    font-size: var(--fs-xl);
    color: var(--dream-purple);
  }

  /* Story Section */
  .story-section {
    position: relative;
    z-index: 1;
    padding: 4rem 0;
  }

  .story-content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .story-text h2 {
    font-family: var(--font-display);
    font-size: var(--fs-4xl);
    font-weight: 700;
    color: var(--dream-deep-purple);
    margin-bottom: 2rem;
  }

  .story-text p {
    font-family: var(--font-body);
    font-size: var(--fs-base);
    color: var(--dream-purple);
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }

  .story-visual {
    position: relative;
    height: 400px;
  }

  .visual-card {
    position: absolute;
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border-radius: var(--radius-lg);
    border: 2px solid var(--glass-border);
    box-shadow: var(--shadow-md);
    width: 150px;
    height: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .visual-card .emoji {
    font-size: 4rem;
  }

  .card-1 {
    top: 10%;
    left: 10%;
    animation: floatCard 4s ease-in-out infinite;
  }

  .card-2 {
    top: 50%;
    right: 10%;
    animation: floatCard 4s ease-in-out infinite 1s;
  }

  .card-3 {
    bottom: 10%;
    left: 30%;
    animation: floatCard 4s ease-in-out infinite 2s;
  }

  .visual-card:hover {
    transform: scale(1.1) rotate(5deg);
  }

  @keyframes floatCard {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  /* Values Section */
  .values-section {
    position: relative;
    z-index: 1;
    padding: 6rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-family: var(--font-display);
    font-size: var(--fs-4xl);
    font-weight: 700;
    color: var(--dream-deep-purple);
    margin-bottom: 1rem;
  }

  .section-header p {
    font-family: var(--font-body);
    font-size: var(--fs-lg);
    color: var(--dream-purple);
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .value-card {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border-radius: var(--radius-lg);
    padding: 3rem 2.5rem;
    border: 2px solid var(--glass-border);
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
  }

  .value-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
  }

  .value-number {
    font-family: var(--font-display);
    font-size: var(--fs-3xl);
    font-weight: 700;
    background: linear-gradient(135deg, var(--dream-accent-1), var(--dream-accent-2));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .value-card h3 {
    font-family: var(--font-display);
    font-size: var(--fs-xl);
    font-weight: 600;
    color: var(--dream-deep-purple);
    margin-bottom: 1rem;
  }

  .value-card p {
    font-family: var(--font-body);
    font-size: var(--fs-sm);
    color: var(--dream-purple);
    line-height: 1.7;
  }

  /* Team Section */
  .team-section {
    position: relative;
    z-index: 1;
    padding: 6rem 0;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .team-member {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border-radius: var(--radius-lg);
    padding: 2.5rem 2rem;
    border: 2px solid var(--glass-border);
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: all 0.3s ease;
  }

  .team-member:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-lg);
  }

  .member-avatar {
    width: 100px;
    height: 100px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    background: linear-gradient(135deg,
      var(--dream-pink),
      var(--dream-lavender),
      var(--dream-mint));
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    box-shadow: 0 8px 24px rgba(192, 132, 252, 0.3);
  }

  .team-member h4 {
    font-family: var(--font-display);
    font-size: var(--fs-lg);
    font-weight: 600;
    color: var(--dream-deep-purple);
    margin-bottom: 0.5rem;
  }

  .member-role {
    font-family: var(--font-body);
    font-size: var(--fs-sm);
    color: var(--dream-accent-1);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .member-bio {
    font-family: var(--font-body);
    font-size: var(--fs-xs);
    color: var(--dream-purple);
    line-height: 1.6;
  }

  /* Next Steps Section */
  .next-steps-section {
    position: relative;
    z-index: 1;
    padding: 6rem 0;
  }

  .next-steps-content {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 2rem;
    align-items: center;
  }

  .next-step-card {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border-radius: var(--radius-lg);
    padding: 3rem 2.5rem;
    border: 2px solid var(--glass-border);
    box-shadow: var(--shadow-md);
    text-align: center;
    transition: all 0.3s ease;
  }

  .next-step-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
  }

  .next-step-card h3 {
    font-family: var(--font-display);
    font-size: var(--fs-2xl);
    font-weight: 700;
    color: var(--dream-deep-purple);
    margin-bottom: 1rem;
  }

  .next-step-card p {
    font-family: var(--font-body);
    font-size: var(--fs-base);
    color: var(--dream-purple);
    margin-bottom: 2rem;
  }

  .next-step-card .btn {
    width: 100%;
  }

  .next-step-divider {
    font-family: var(--font-display);
    font-size: var(--fs-lg);
    font-weight: 600;
    color: var(--dream-purple);
    padding: 1rem;
  }

  .btn-large {
    padding: 1.25rem 3rem;
    font-size: var(--fs-lg);
  }

  /* Responsive Styles */
  @media (max-width: 1024px) {
