<style>
  body {
    background: linear-gradient(135deg,
      var(--dream-pink) 0%,
      var(--dream-lavender) 30%,
      var(--dream-mint) 60%,
      var(--dream-cream) 100%);
    min-height: 100vh;
  }

  /* Floating Background */
  .dream-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .cloud {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.3;
    animation: float 20s ease-in-out infinite;
  }

  .cloud-1 {
    width: 350px;
    height: 350px;
    background: var(--dream-pink);
    top: 10%;
    left: 15%;
  }

  .cloud-2 {
    width: 400px;
    height: 400px;
    background: var(--dream-lavender);
    top: 50%;
    right: 15%;
    animation-delay: 7s;
  }

  .cloud-3 {
    width: 300px;
    height: 300px;
    background: var(--dream-mint);
    bottom: 15%;
    left: 30%;
    animation-delay: 14s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(20px, -20px) scale(1.1);
    }
    50% {
      transform: translate(-15px, -40px) scale(0.9);
    }
    75% {
      transform: translate(10px, -20px) scale(1.05);
    }
  }

  /* Page Hero */
  .page-hero {
    position: relative;
    z-index: 1;
    padding: 10rem 0 4rem;
    text-align: center;
  }

  .page-hero h1 {
    font-family: var(--font-display);
    font-size: var(--fs-5xl);
    font-weight: 700;
    background: linear-gradient(135deg,
      var(--dream-deep-purple),
      var(--dream-accent-1),
      var(--dream-accent-2));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-family: var(--font-body);
    font-size: var(--fs-xl);
    color: var(--dream-purple);
  }

  /* Contact Section */
  .contact-section {
    position: relative;
    z-index: 1;
    padding: 4rem 0 6rem;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 3rem;
  }

  /* Contact Form */
  .contact-form-wrapper {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border-radius: var(--radius-lg);
    padding: 3rem;
    border: 2px solid var(--glass-border);
    box-shadow: var(--shadow-lg);
  }

  .form-header {
    margin-bottom: 2.5rem;
  }

  .form-header h2 {
    font-family: var(--font-display);
    font-size: var(--fs-3xl);
    font-weight: 700;
    color: var(--dream-deep-purple);
    margin-bottom: 0.5rem;
  }

  .form-header p {
    font-family: var(--font-body);
    font-size: var(--fs-base);
    color: var(--dream-purple);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-family: var(--font-display);
    font-size: var(--fs-base);
    font-weight: 600;
    color: var(--dream-deep-purple);
  }

  .required {
    color: var(--dream-accent-2);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    font-family: var(--font-body);
    font-size: var(--fs-base);
    padding: 1rem 1.25rem;
    border-radius: var(--radius-md);
    border: 2px solid rgba(139, 126, 159, 0.2);
    background: rgba(255, 255, 255, 0.5);
    color: var(--dream-deep-purple);
    transition: all 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--dream-accent-1);
    background: rgba(255, 255, 255, 0.7);
    box-shadow: 0 0 0 3px rgba(192, 132, 252, 0.1);
  }

  .form-group textarea {
    resize: vertical;
  }

  .btn-large {
    padding: 1.25rem 3rem;
    font-size: var(--fs-lg);
    width: 100%;
    margin-top: 1rem;
  }

  .form-message {
    padding: 1rem;
    border-radius: var(--radius-md);
    font-family: var(--font-body);
    font-size: var(--fs-sm);
    text-align: center;
    display: none;
  }

  .form-message.success {
    display: block;
    background: rgba(134, 239, 172, 0.2);
    border: 2px solid rgba(134, 239, 172, 0.5);
    color: #166534;
  }

  .form-message.error {
    display: block;
    background: rgba(249, 168, 212, 0.2);
    border: 2px solid rgba(249, 168, 212, 0.5);
    color: #9f1239;
  }

  /* Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .info-card {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border-radius: var(--radius-lg);
    padding: 2rem;
    border: 2px solid var(--glass-border);
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
  }

  .info-card:hover {
    transform: translateX(5px);
    box-shadow: var(--shadow-lg);
  }

  .info-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
