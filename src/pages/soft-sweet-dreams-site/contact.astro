    font-weight: 600;
    color: var(--dream-deep-purple);
    margin-bottom: 0.75rem;
  }

  .info-card p,
  .info-card a {
    font-family: var(--font-body);
    font-size: var(--fs-base);
    color: var(--dream-purple);
    line-height: 1.6;
  }

  .info-card a {
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .info-card a:hover {
    color: var(--dream-deep-purple);
  }

  .note {
    font-size: var(--fs-sm);
    color: var(--dream-light-text);
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .social-link {
    display: inline-block;
    text-decoration: none;
    font-family: var(--font-body);
    font-size: var(--fs-base);
    color: var(--dream-purple);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    color: var(--dream-deep-purple);
    transform: translateX(5px);
  }

  /* Navigation Helper */
  .nav-helper {
    position: relative;
    z-index: 1;
    padding: 4rem 0 6rem;
  }

  .helper-content {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border-radius: var(--radius-lg);
    padding: 3rem;
    border: 2px solid var(--glass-border);
    box-shadow: var(--shadow-md);
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .helper-text h3 {
    font-family: var(--font-display);
    font-size: var(--fs-xl);
    font-weight: 600;
    color: var(--dream-deep-purple);
    margin-bottom: 0.5rem;
  }

  .helper-text p {
    font-family: var(--font-body);
    font-size: var(--fs-base);
    color: var(--dream-purple);
  }

  .helper-buttons {
    display: flex;
    gap: 1rem;
    flex-shrink: 0;
  }

  /* Responsive Styles */
  @media (max-width: 1024px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  @media (max-width: 768px) {
    .page-hero {
      padding: 8rem 0 3rem;
