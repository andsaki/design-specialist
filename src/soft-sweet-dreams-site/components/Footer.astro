<style>
  .site-footer {
    position: relative;
    background: linear-gradient(135deg,
      var(--dream-lavender) 0%,
      var(--dream-pink) 50%,
      var(--dream-peach) 100%);
    padding: 4rem 0 2rem;
    overflow: hidden;
  }

  .footer-shapes {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0.3;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
  }

  .shape-1 {
    width: 400px;
    height: 400px;
    background: var(--dream-mint);
    top: -100px;
    left: -100px;
  }

  .shape-2 {
    width: 500px;
    height: 500px;
    background: var(--dream-lavender);
    bottom: -150px;
    right: -150px;
  }

  .footer-content {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1.5fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-display);
    font-size: 1.75rem;
    font-weight: 700;
  }

  .footer-logo .logo-icon {
    font-size: 2.5rem;
  }

  .footer-logo .logo-text {
    background: linear-gradient(135deg,
      var(--dream-deep-purple) 0%,
      var(--dream-accent-1) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .footer-tagline {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--dream-purple);
    max-width: 300px;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .footer-column h4 {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--dream-deep-purple);
    margin-bottom: 1rem;
  }

  .footer-column ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-column a {
    text-decoration: none;
    font-family: var(--font-body);
    font-size: 1rem;
    color: var(--dream-purple);
    transition: all 0.3s ease;
    display: inline-block;
  }

  .footer-column a:hover {
    color: var(--dream-deep-purple);
    transform: translateX(5px);
  }

  .footer-bottom {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 2px solid rgba(255, 255, 255, 0.3);
  }

  .footer-bottom p {
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--dream-purple);
  }

  .made-with {
    font-weight: 600;
  }

  /* Tablet Styles */
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .footer-links {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .site-footer {
      padding: 3rem 0 1.5rem;
    }

    .footer-content {
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .footer-brand {
      text-align: center;
      align-items: center;
    }

    .footer-tagline {
      text-align: center;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .footer-column a:hover {
      transform: translateX(0);
    }

    .footer-bottom {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }

    .shape-1, .shape-2 {
      width: 250px;
      height: 250px;
    }
  }

  @media (max-width: 480px) {
    .footer-logo {
      font-size: 1.5rem;
    }

    .footer-logo .logo-icon {
      font-size: 2rem;
    }

    .footer-tagline {
      font-size: 1rem;
    }

    .footer-column h4 {
      font-size: 1.1rem;
    }

    .footer-column a {
      font-size: 0.95rem;
    }
  }
</style>
